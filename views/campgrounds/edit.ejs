<%- include("../partials/header") %>
<h1 class="text-center mt-5 mb-5">Edit <%=campground.name%></h1>

<div class="container" style="width:40%; margin:0,auto;">
	<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
		<div class="form-group">
			<label for="exampleInputEmail1">Name of the Campground</label>
			<input type="text" class="form-control" name="camp[name]" value="<%=campground.name%>">
		</div>
		<div class="form-group">
			<label for="exampleInputEmail1">Cost Per Night</label>
			<input type="number" class="form-control" name="camp[price]" value="<%=campground.price%>">
		</div>
		<div class="form-group">
			<label for="exampleInputPassword1">URL of the Image</label>
			<input type="text" class="form-control" name="camp[image]" value="<%=campground.image%>">
		</div>
		<div class="form-group">
			<label for="exampleInputPassword1">Description of Campground</label>
			<input type="text" class="form-control" name="camp[description]" value="<%=campground.description%>">
		</div>
		<div class="form-group mt-4">
			<button type="submit" class="btn btn-primary mr-2">Submit</button>
			<a href="/campgrounds" class="btn btn-primary">Back</a>
		</div>
	</form>
</div>

<%- include("../partials/footer") %>