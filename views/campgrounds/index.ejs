<%- include("../partials/header") %>

<div>
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to Yelpcamp!</h1>
			<p>View our hand-picked campgrounds from all over the world...</p>
			<p>
				<a class="btn btn-primary" href="/campgrounds/new">Add new Campground</a>
			</p>
		</div>
	</header>

	<div class="mr-5 ml-5">
		<div class="row">
			<% campgrounds.forEach(function(campground) { %>
				<div class="col-xl-3  col-lg-4 col-sm-6  d-flex align-items-stretch">
					<div class="card index">
					  <img src="<%= campground.image %>" class="card-img-top">
					  <div class="card-body">
						<h5 class="card-title"><%= campground.name %></h5>
						<a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View Camp</a>
					  </div>
					</div>
				</div>
			<% }) %>
		</div>
	</div>
</div>

<%- include("../partials/footer") %>